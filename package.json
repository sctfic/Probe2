{
  "name": "probe2-api",
  "version": "0.3.31",
  "description": "API pour récupérer des informations sur l'application Probe2",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "test": "jest --forceExit",
    "test:watch": "jest --watch --forceExit",
    "test:coverage": "jest --coverage --forceExit",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --forceExit",
    "test:health": "jest --testNamePattern='health' --forceExit",
    "test:info": "jest --testNamePattern='info' --forceExit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@influxdata/influxdb-client": "^1.35.0",
    "@influxdata/influxdb-client-apis": "^1.35.0",
    "adm-zip": "^0.5.16",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "child_process": "^1.0.2",
    "crc": "^4.3.2",
    "date-fns-tz": "^3.2.0",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "fs-extra": "^11.3.2",
    "moment-timezone": "^0.6.0",
    "net": "^1.0.2",
    "node-cron": "^4.2.1",
    "ping": "^0.4.4",
    "tz-lookup": "^6.1.25"
  },
  "devDependencies": {
    "jest": "^30.1.3",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "forceExit": true,
    "detectOpenHandles": true,
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!ecosystem.config.js",
      "!jest.config.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
