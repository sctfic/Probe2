{
  "name": "probe2-api",
  "version": "0.0.31",
  "description": "API pour récupérer des informations sur l'application Probe2",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "test": "jest --forceExit",
    "test:watch": "jest --watch --forceExit",
    "test:coverage": "jest --coverage --forceExit",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --forceExit",
    "test:health": "jest --testNamePattern='health' --forceExit",
    "test:info": "jest --testNamePattern='info' --forceExit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "crc": "^4.3.2",
    "date-fns-tz": "^3.2.0",
    "express": "^4.18.2",
    "influxdb": "^0.0.1",
    "moment-timezone": "^0.6.0",
    "net": "^1.0.2",
    "tz-lookup": "^6.1.25"
  },
  "devDependencies": {
    "jest": "^30.0.4",
    "supertest": "^7.1.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "forceExit": true,
    "detectOpenHandles": true,
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!ecosystem.config.js",
      "!jest.config.js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
  }
}
